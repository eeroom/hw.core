<Configuration status="info" strict="true" package="org.azeroth.log4jdemo">
    <Loggers>
        <Root level="debug">
            <AppenderRef ref="STDOUT"/>
            <AppenderRef ref="db"/>
        </Root>
    </Loggers>
    <Appenders>
        <Appender type="Console" name="STDOUT">
            <Layout type="PatternLayout" pattern="%n年龄：%sx{Age} %n姓名：%sx{Name}">
            </Layout>
        </Appender>
        <Appender type="Jdbc" name="db" tableName="Log">
            <ConnectionFactory class="io.github.eeroom.log.log4j.ConnectionFactory" method="getConnection" />
            <Column name="Name" pattern="%sx{Name}" />
        </Appender>
        <Appender type="RollingFile" name="localFile" fileName="logs/log.txt" filePattern="logs/log-%d{yyyy-MM-dd}-%i.txt.gz">
            <Layout type="PatternLayout" pattern="%n年龄：%sx{Age} %n姓名：%sx{Name}">
            </Layout>
            <Policies>
                <SizeBasedTriggeringPolicy size="50MB"></SizeBasedTriggeringPolicy>
            </Policies>
            <DefaultRolloverStrategy max="100"></DefaultRolloverStrategy>
        </Appender>
    </Appenders>



</Configuration>